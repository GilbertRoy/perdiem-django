{% extends "email/base.email" %}

{% block email_subject %}{{ artist.name }}: {{ update.title }}{% endblock %}

{% block plain_body %}
    {{ update.text }}

    View the full update on the artist's page on PerDiem: {{ host }}{% url 'artist' slug=artist.slug %}.
{% endblock %}

{% block html_body %}
    {% include "artist/includes/artist_update_media.html" with update=update %}
    <p>{{ update.text }}</p>
{% endblock %}
