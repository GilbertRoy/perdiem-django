{% block subject %}{% block email_subject %}A message from PerDiem{% endblock %}{% endblock %}

{% block plain %}
    {% block plain_body %}{% endblock %}
    {{ unsubscribe_message.plain }}
{% endblock %}

{% block html %}
    <!DOCTYPE html>
    <html>
        <head>
            <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
            <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
            <title>{% block email_subject %}A message from PerDiem{% endblock %}</title>
            <style type="text/css">
                {% block html_style %}{% endblock %}
            </style>
        </head>
        <body>
            {% block html_body %}{% endblock %}
            {{ unsubscribe_message.html }}
        </body>
    </html>
{% endblock %}
